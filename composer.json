{
    "name": "datomatic/enum-helper",
    "description": "Simple opinionated php 8.1 enum helper",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alberto Peripolli",
            "email": "info@albertoperipolli.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Datomatic\\EnumHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datomatic\\EnumHelper\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "orchestra/testbench": "^6.23|^7.0",
        "phpstan/phpstan": "^1.7"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
